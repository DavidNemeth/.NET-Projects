                    <span class="glyphicon glyphicon-arrow-right" aria-hidden="true"></span>
                </button>
            </div>

            <div class="col-md-4 form-group">
                <label class="control-label">Összes Diagnosztika</label>
                @Html.ListBox("NotSelectedCon", (MultiSelectList)ViewBag.NotSelectedCon, new { @class = "form-control" })
                <button type="button" id="btnLeft" class="btn btn-default">
                    <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
                </button>
            </div>
        </div>
        @*MANY TO MANY*@
        <div class="form-group">
            @Html.LabelFor(model => model.DoctorID, "Doktor", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("DoctorID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.DoctorID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" id="btnSubmit" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

