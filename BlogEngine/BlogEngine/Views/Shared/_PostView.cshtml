@model BlogEngine.Models.Post

<div class="container">
    <div class="row">
        <!-- Blog Post Content Column -->
        <div class="col-lg-8">
            <!-- Blog Post -->
            <!-- Title -->
            <h1>@Model.Tittle.ToString()</h1>
            <!-- Author -->
            <p class="lead">
                by <a href="#">@*@Model.Author.Tostring()*@</a>
            </p>
            <hr>
            <!-- Date/Time -->
            <p><span class="glyphicon glyphicon-time"></span> @Model.PostedDate.ToShortDateString()</p>
            <hr>            
            <!-- Post Content -->
            @Model.Body.ToString()
            <hr>
            <!-- Blog Comments -->
            <!-- Comments Form -->
            <div class="well">
                <h4>Leave a Comment:</h4>
                <form role="form">
                    <div class="form-group">
                        <textarea class="form-control" rows="3"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
            <hr>
            <!-- Posted Comments -->
            <!-- Comment -->
        </div>
    </div>
</div>



