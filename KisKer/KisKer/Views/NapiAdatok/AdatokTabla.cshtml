@model IEnumerable<KisKer.ViewModels.NapiAdatokViewModel>

@using KisKer.Controllers
@{ 
    NapiAdatokController Ctrl = new NapiAdatokController();
    decimal napibevetel = 0;
}
<div class="pull-right">    
    @foreach (var item in NapiAdatokController.AdatokList)
    {
        napibevetel += item.TeljesAr;        
    }
    <label>Napi Bevétel:</label>
    @String.Format("{0:#,##0.00}", napibevetel) Ft
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AruMegnevezes)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Mertekegyseg)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EgysegAr)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AruMennyiseg)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TeljesAr)
        </th>        
        <th></th>
    </tr>

    @foreach (var item in NapiAdatokController.AdatokList)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ErtekesitesDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AruMegnevezes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mertekegyseg)
                @Html.DisplayFor(modelItem => item.MertekegysegAzon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EgysegAr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AruMennyiseg)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TeljesAr)
            </td>            
        </tr>
    }

</table>
