@model KisKer.Models.AruKeszlet
<div class="well">
    <h3>
        <strong>@Model.AruMegnevezes</strong>
        <span class="pull-right label label-primary">@Model.EgysegAr.ToString("c")</span>
    </h3>
    @using (Html.BeginForm("AddToCart", "Cart"))
    {
        <div class="pull-right">
            @Html.HiddenFor(x => x.AruID)
            @Html.Hidden("returnUrl", Request.Url.PathAndQuery)
            <input type="submit" class="btn btn-success" value="Hozzáad" />
        </div>
    }
    <span class="lead">@Model.Raktarkeszlet</span>
</div>