@model IEnumerable<MvcNews.Models.News>

@{
    ViewBag.Title = "News";
}

<body>    
    <!-- Page Content -->
    <div class="container">
        <div class="row">
            <!-- Blog Entries Column -->
            <div class="col-md-8">
                <h1 class="page-header">
                    MvcNews                    
                </h1>
                <!-- First Blog Post -->
                @foreach (var item in Model)
                {
                    <h2>
                        <a href="#">@Html.DisplayFor(modelItem => item.Tittle)</a>
                    </h2>
                    <p class="lead">
                        by <a href="index.php">TODO: AUTHOR</a>
                    </p>
                    <p><span class="glyphicon glyphicon-time"></span> Posted on @Html.DisplayFor(modelItem => item.PostedDate)</p>
                    <hr>
                    <img class="img-responsive" src="http://placehold.it/900x300" alt="">
                    <hr>
                    <p>@Html.DisplayFor(modelItem => item.Description)</p>                              
                    @Html.ActionLink("Tovább", "Details",new {id = item.Id })
                    <hr>                   
                }
                            
                <!-- Pager -->
                <ul class="pager">
                    <li class="previous">
                        <a href="#">&larr; Older</a>
                    </li>
                    <li class="next">
                        <a href="#">Newer &rarr;</a>
                    </li>
                </ul>
            </div>
            <!-- Blog Sidebar Widgets Column -->
            <div class="col-md-4">
                <!-- Blog Search Well -->
                <div class="well">
                    <h4>Blog Search</h4>
                    <div class="input-group">
                        <input type="text" class="form-control">
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="button">
                                <span class="glyphicon glyphicon-search"></span>
                            </button>
                        </span>
                    </div>                  
                </div>
               
                <div class="well">
                    <h4>Categories & Tags</h4>                    
                    <div class="row">
                        <div class="col-lg-6">
                            <ul class="list-unstyled">
                                <li>
                                   @Html.ListBox("CategoryID", null, htmlAttributes: new { @class = "form-control" })
                                </li>                            
                            </ul>
                        </div>   
                            <div class="col-lg-6">
                                <ul class="list-unstyled">
                                    <li>
                                        @Html.ListBox("TagID", null, htmlAttributes: new { @class = "form-control" })
                                    </li>
                                </ul>
                            </div>                            
                            <!-- /.col-lg-6 -->
                        </div>
                    <!-- /.row -->
                </div>
                </div>
        </div>
        <!-- /.row -->
        <hr>
        <!-- Footer -->
        <footer>
            <div class="row">
                <div class="col-lg-12">
                    <p>Copyright &copy; Your Website 2014</p>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </footer>
    </div>
    <!-- /.container -->
    <!-- jQuery -->
    <script src="js/jquery.js"></script>
    <!-- Bootstrap Core JavaScript -->
    <script src="js/bootstrap.min.js"></script>
</body>

