        <dt>
            @Html.DisplayNameFor(model => model.Keresztnév)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Keresztnév)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Szulido)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Szulido)
        </dd>

        <dt>
