        <dt>
            @Html.DisplayNameFor(model => model.Szerelo.SzereloNev)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Szerelo.SzereloNev)
        </dd>
        <dt>
            Gépjárművek
        </dt>
        <dd> 
            @try
            {
                foreach (var auto in Model.GepJarmu)
                {
                    @auto.Auto @Html.ActionLink(" ", "DeleteFor", "GepJarmuvek", new { id = auto.ID }, new { @class = "glyphicon glyphicon-remove" })
                    @: <br />
            }
            }
            catch (Exception)
            {                
                { Response.Redirect(Request.UrlReferrer.ToString());}
            }                      
        </dd>
        <dd></dd>
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            <a href="javascript:history.back()">Vissza</a>
        </div>
    }
</div>
