@model IEnumerable<SzereloCegApp.Models.Szerelo>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SzereloNev)
        </th>        
        <th>Ügyfelek</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SzereloNev)
        </td> 
        <td>
            @foreach (var ugyfel in item.Ugyfelek)
            {
                @Html.ActionLink(@ugyfel.UgyfelNev, "Details","Ugyfelek", new { id = ugyfel.ID }, null)
                @: <br />
        }
        </td>  
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
