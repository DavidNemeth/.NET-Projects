@model SzereloCegApp.Models.Szerelo

@{
    ViewBag.Title = "Details";
}

<h2>Szerelő Adatai</h2>

<div>
    <h4>@Html.DisplayFor(model => model.SzereloNev)</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Vezetéknév)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Vezetéknév)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Keresztnév)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Keresztnév)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.SzereloTelefon)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SzereloTelefon)
        </dd>
        
    </dl>
</div>
<div class="row">
    <div class="col-md-3 col-lg-3">
        <table class="table">
            <tr>
                <th>@Html.DisplayFor(model => model.SzereloNev) ügyfelei: @Model.Ugyfelek.Count() </th>
            </tr>

            @foreach (var ugyfel in Model.Ugyfelek)
            {
                <tr>
                    <td>@Html.ActionLink(@ugyfel.UgyfelNev, "Details", "Ugyfelek", new { id = ugyfel.ID }, null)</td>                    
                </tr>
            }

        </table>
    </div>
</div>
<p>
    @Html.ActionLink("Módosítás", "Edit", new { id = Model.ID }, new { @class = "btn btn-default" })
    @Html.ActionLink("Törlés", "Delete", new { id = Model.ID }, new { @class = "btn btn-danger" })
    ||
    <a href="javascript:history.back()">Vissza</a>
</p>

